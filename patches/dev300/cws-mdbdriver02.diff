+			    // COLUMN_SIZE
+			    aRow[6] <<= ::rtl::OUString::valueOf((long)col->col_size,10);
+			    // BUFFER_LENGTH, not used
+			    aRow[7] <<=::rtl::OUString::createFromAscii("");
+			    // DECIMAL_DIGITS.
