+USHORT ScTabPageSortFields::GetFieldSelPos( SCCOLROW nField )
+{
+	USHORT	nFieldPos	= 0;
+	BOOL	bFound		= FALSE;
+
+	for ( USHORT n=1; n<nFieldCount && !bFound; n++ )
+	{
+		if ( nFieldArr[n] == nField )
+		{
+			nFieldPos = n;
+			bFound = TRUE;
+		}
+	}
+
+	return nFieldPos;
+}
