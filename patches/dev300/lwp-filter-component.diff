+    bool CheckValidData( sal_Int8 nChar )
+    {
+        if( ( nChar >= 0x20 && nChar <= 0x7E ) && ( nChar != 0X40 ) )
+            return  true;
+        return false;				   
+    } 
+
+    void addAttribute( SvXMLAttributeList* pAttrList, const char* key, const char* val )
