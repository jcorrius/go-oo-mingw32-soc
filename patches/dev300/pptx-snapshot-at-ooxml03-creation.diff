+
+    pFS->endElementNS( XML_p, XML_sldLayoutIdLst );
+
+    // WriteTextStyles( pFS );
+
+    pFS->endElementNS( XML_p, XML_sldMaster );
+
+    DBG(printf("----------------\n"));
