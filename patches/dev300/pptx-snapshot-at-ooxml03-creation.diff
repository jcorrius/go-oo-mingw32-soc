+            ShapeExport::WriteTextShape( xShape );
+    }
+    else if( sShapeType.equalsAscii( "com.sun.star.presentation.TitleTextShape" ) )
+    {
+        if( !mrExport.WritePlaceholder( GetFS(), *this, Title, mbMaster ) )
