+            ShapeExport::WriteTextShape( xShape );
+    }
+    else if( sShapeType.equalsAscii( "com.sun.star.presentation.OutlinerShape" ) )
+    {
+        if( !mrExport.WritePlaceholder( GetFS(), *this, Outliner, mbMaster ) )
+            ShapeExport::WriteTextShape( xShape );
