+    pFS->startElementNS( XML_p, XML_cSld, FSEND );
+
+    ImplWriteBackground( pFS, aXBackgroundPropSet );
+    WriteShapeTree( pFS, MASTER, TRUE );
+
+    pFS->endElementNS( XML_p, XML_cSld );
