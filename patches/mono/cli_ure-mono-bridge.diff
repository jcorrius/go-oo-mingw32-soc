+        IntPtr unoEnvironment,
+        ref IntPtr ppInterface,
+        /* UString */ void* oid,
+        /* InterfaceTypeDescription */ void *td);
+
+    [ DllImport("cli_uno", EntryPoint="cli_uno_environment_getRegisteredInterface") ]
