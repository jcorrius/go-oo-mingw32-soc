+    {
+        int returnSize = sizeof(largest);
+
+        if (returnType != null &&
+            (returnType->eTypeClass == TypeClass.STRUCT ||
+             returnType->eTypeClass == TypeClass.EXCEPTION))
+        {
+            // FIXME leak
+            TypeDescription *td = null;
+            TypeDescriptionReference.GetDescription(&td, returnType);
