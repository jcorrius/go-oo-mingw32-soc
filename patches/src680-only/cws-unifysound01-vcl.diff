-
-	int nPos = 12;
-	while( nPos < pData->m_pSound->m_aStat.st_size )
-	{
-		if( ! strncmp( pData->m_pSound->m_pBuffer+nPos, pChunk, 4 ) )
-			return nPos;
-
-		// get LSB int length
-		nPos += readLEInt( pData->m_pSound->m_pBuffer+nPos+4 ) + 8;
-	}
-	return -1;
-}
