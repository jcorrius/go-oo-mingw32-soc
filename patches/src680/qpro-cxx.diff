+void BiffReader::readString( String &rString, sal_uInt16 nLength )
+{
+       sal_Char* pText = new sal_Char[ nLength + 1 ];
+       mpStream->Read( pText, nLength );
+       pText[ nLength ] = 0;
+       rString = String( pText, meCharSet );
+}
