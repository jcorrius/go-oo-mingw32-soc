+static unsigned int
+getShift( ULONG nPos )
+{
+	if (nPos <= 0x80) {
+		if (nPos <= 0x20)
+			return (nPos <= 0x10) ? 12 : 11;
+		else
+			return (nPos <= 0x40) ? 10 : 9;
+	} else {
+		if (nPos <= 0x200)
+			return (nPos <= 0x100) ? 8 : 7;
+		else if (nPos <= 0x800)
+			return (nPos <= 0x400) ? 6 : 5;
+		else
+			return 4;
+	}
+}
