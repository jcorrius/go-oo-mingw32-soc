+		OString sTempStringa( "\n" );
+		OString sTempStringb( "\x0D\x0A" );
+		OString sOutput = rString;
+		
+	   	sal_Int32 nFromIndex = 0;
+		sal_Int32 nToIndex = -1;
+		while( (nToIndex = sOutput.indexOf( sTempStringa, nFromIndex ) ) != -1 )
