+		writeString( sName );
+		if( bDocument )
+		    writeString( "/&H00000000" );
+		writeString( "\n" );
+		mxProjectWm->Write( (const sal_Char *) sName, sName.getLength() );
+		*mxProjectWm << UINT8( 0 );
+		mxProjectWm->Write( (const sal_Unicode *) rName, rName.getLength() * 2);
+		*mxProjectWm << UINT16( 0 );
