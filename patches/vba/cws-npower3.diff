+class PCodeVisitor
+{
+public:
+   virtual void start( BYTE* pStart ) = 0;
+   virtual void processOpCode0( SbiOpcode eOp ) = 0; 
+   virtual void processOpCode1( SbiOpcode eOp, T nOp1 ) = 0; 
