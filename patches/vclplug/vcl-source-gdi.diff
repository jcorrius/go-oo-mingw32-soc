+// ------------------------------------------------------------------------
+
+void PNGWriterImpl::ImplWritepHYs( const BitmapEx& rBmpEx )
+{
+	if ( rBmpEx.GetPrefMapMode() == MAP_100TH_MM )
+	{
+		Size aPrefSize( rBmpEx.GetPrefSize() );
+		if ( aPrefSize.Width() && aPrefSize.Height() )
