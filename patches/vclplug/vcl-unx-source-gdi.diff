+sal_uInt8
+SalPrinterBmp::GrayOf (BitmapColor& rColor) const
+{
+	if (rColor.IsIndex())
+		return GrayOf (mpBmpBuffer->maPalette[rColor.GetIndex()]);
+	else
+		return (  rColor.GetBlue()  *  28UL
+				+ rColor.GetGreen() * 151UL
+				+ rColor.GetRed()   *  77UL ) >> 8;
